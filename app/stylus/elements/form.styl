label
    display none

.form
    overflow hidden
    width 100%

    &__group
        margin 0.5em 0
        +above(b3)
            width 70%
            &:nth-child(2),
            &:nth-child(3)
                width 34.7%
                display-inline-block()

    &__control
        display: block;
        width: 100%;
        height: 50px;
        padding: 10px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s
        box-sizing border-box

        &:focus
            border-color: #66afe9;
            outline: 0;
            box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102, 175, 233, .6)
        &::-moz-placeholder
            color: #999;
            opacity: 1

    &__submit
        width 100%
        height 178px
        absolute right
        +above(b3)
            width 222px
            bottom 0



textarea.form__control
    height 150px

