.btn
    display block
    width 100%
    text-decoration none
    padding 0.5em 0
    &--submit
        background-color rojo
        color blanco
        text-align center
        font-size 2em
        border 0
        font-family kaushanscript-regular-webfont
        +above(b3)
            background-image url("img/btn--bubble.png")
            background-repeat no-repeat
            height 178px
            line-height 120px
            background-color transparent

            text-align center
            padding-left 0.8em

    &--secundary
        margin-left: auto;
        width: 120px;
        padding: 0px;
        margin-right: 15%

    &--bubble
        absolute top left
        height auto
        font-family kaushanscript-regular-webfont
        box-sizing border-box
        +above(b2)
            background-image url("img/btn--bubble.png")
            background-color transparent
            background-repeat no-repeat
            width 222px
            height 178px
            line-height 169px
            overflow hidden
            font-family kaushanscript-regular-webfont
            font-size 1.8em
            padding 0 1.8em
            relative top right left -60px
        +above(b3)
            background-size 100% 90%
            line-height 145px
            padding 0 1em 0 1.5em
            relative top left
            float right
            width 42%

        +above(b4)
            width 222px
            height 178px
            background-size 100% 100%
            padding 0 0 0 1.2em
            line-height 178px
    &--readmore
        background-color rojo
        color blanco
        text-align center
        center-block(40%)


