.bubble
  p
    font-size 1.75em
    font-family kaushanscript-regular-webfont

  &__right
    relative top left
    height 400px
  &__center
    background-image url("img/bg_header.png")
    background-size cover
    background-position center top
    background-repeat no-repeat
    height 300px
    overflow hidden
    padding 0
    absolute left top 19%
    width 100%
    figure
      center-block(265px)
    +above(b2)
      background-image none
      padding 0
      float left
      width 60%
      height auto
      figure
        width 130px
    +above(b3)
      width 50%
      figure
        width 100%
        max-width 200px
  &__left
    h2
      span
        display block

  +above(b2)
    position relative
    &__left
      background-image url("img/bubble__left_tablet.png")
      background-repeat no-repeat
      width 674px
      height 472px
      h2
        padding 1.8em 3em 0
        font-size 2.5em
      p
        font-size 1.5em
        padding 0 2em 1em
      +above(b3)
        background-image url("img/bubble__left_pc.png")
        background-size 100% 100%
        display-inline-block()
        width 58%
        h2
          padding 2em 4em .5em 2em
          margin 0
        p
          padding 0 4em 0.5em 0.2em
          font-size: 1.3em
          center-block(60%)
          margin-top 0
          margin-bottom 0
      +above(b4)
        width 611px
        height 371px
        h2
          padding 1.5em 3em .2em 2em
        p
          padding 0 3em 0 1em
    &__right
      overflow hidden
      +above(b3)
        display-inline-block()
        width 40%
        margin-top 1em
      +above(b4)
        width calc(98% - 611px)

