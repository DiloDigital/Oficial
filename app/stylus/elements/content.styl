.hidden
  display none

.logo
  overflow hidden
  width 260px
  margin-left 6px
  +above(b2)
    margin 0.1em 0 0 1em
    float left
  +above(b4)
    margin-top 0.2em

.offers
  p
    font-size 1.3em
    font-family lora-regular-webfont
  &__item
    border gris_dark
    background-color blanco
    border-radius 0 0 1em 1em
    margin-bottom 1em
    center-block(320px)
    li
      padding 0.5em 0
      box-sizing border-box
    +above(b2)
      display-inline-block()
      height 300px



.portfolio
  &__box
    display none
    +above(b2)
      display block
      padding 1em

  +above(b2)
    &__item
      display-inline-block()
      width 45%
      margin 0.5em
      max-width 345px

  +above(b3)
    &__item
      max-width 220px

  +above(b4)
    &__item
      max-width 270px


  &__testimonials
    width 97%
    margin 0 auto 0.5em
    padding-bottom 1em
    &-item
      background-color gris_dark
      color blanco
      font-size 0.8em
      padding 0.5em 1em
      margin 1em 0
      text-align: left
    +above(b1)
      &-item
        margin 0 0 1em 0
        figure,
        p
          display-inline-block()
        figure
          margin-right 0.5em
          width 200px
        p
          width 50%
          font-size 1.2em
          margin 0
    +above(b2)
      &-item
        display-inline-block()
        width 41%
        margin 0 0.5em
        figure
          width 40%
          margin-right 0.3em

        p
          font-size 0.91em
          width 57%
    +above(b3)
      &-item
        figure
          width 25%
          padding 2em
        p
          font-size 1.2em
          padding-top 2em
          width 63%

.services
  &__information
    margin-bottom 3em
    p
      font-size 1.3em
  &__image
    margin 1em 0 2em
    figure
      center-block(220px)
      +above(b2)
        width 490px
        height 300px

.title
  margin 0.2em 0
  font-family kaushanscript-regular-webfont
  &--main
    font-size 3.15em
    font-weight normal
  &--offers
    color blanco
    background linear-gradient(left, 40% #F9AE00, #F39200)

.visuallyhidden
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px

.visuallyhidden.focusable:active,
.visuallyhidden.focusable:focus
  clip auto
  height auto
  margin 0
  overflow visible
  position static
  width auto

.invisible
  visibility hidden


.nav
  &__main
    position relative
    &-toggle
      background-color gris_light
      border 0
      color gris_dark
      cursor pointer
      font-size 1em
      height 40px
      padding 10px
      position absolute
      right 0
      top -45px
      width 55px
      &--bar
        background gris_dark
        display block
        height 2px
        transition 0.15s cubic-bezier(0.75, -0.55, 0.25, 1.55)
        width 98%
        & + .nav__main-toggle--bar
            margin-top 7px
      &--active
          .nav__main-toggle--bar
              margin 0
              position absolute
              &:nth-child(1)
                  transform: rotate(45deg);
              &:nth-child(2)
                  opacity 0
              &:nth-child(3)
                  transform: rotate(-45deg);


    &-list
      background rojo
      display none
      list-style none
      margin 0 0 10px
      padding 0
      position relative
      width 100%
      li
          border-bottom 1px solid amarillo
          border-right 0
          width 100%
          &:last-child
              border 0
          &:first-child
              a:after
                  border 6px solid transparent
                  border-bottom-color blanco
                  border-top 0
                  content ''
                  height 0
                  position absolute
                  right 1em
                  top -6px
                  width 0
          a
              color primary_text
              display block
              font-family kaushanscript-regular-webfont
              font-size 1.3em
              padding: 8px 0;
              text-align center
              text-decoration none
              transition all .3s ease-in
              width: 100%;
              &:hover
                  background-color gris_light






      li.current-menu-item
        a
          background-color amarillo
          border-color gris_dark--light
          color blanco

      &--open
          display block !important
          .header__bottom--navegation
              &__child
                  display block

@media screen and (min-width:b2)

  .nav
    &__main
      float right
      width calc(100%-150px)
      margin-top 1em
      &-toggle
        display none
      &-list
        background transparent
        display block
        li
          border 0
          display-inline-block()
          width auto
          overflow hidden
          &:first-child
              a:after
                  display none
          a
            color color-text-icon
            font-size 1.2em
            border-bottom 1px solid color-text-icon
            margin 0.5em 0.2em
            display block
            box-sizing border-box
            width 100px
            &:hover
              border-bottom 1px solid accent_color




