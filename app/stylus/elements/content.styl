::-moz-selection
  background azul
  text-shadow none
  color blanco

::selection
  background azul
  text-shadow none
  color blanco

html
  color primary_text
  font-size 1em
  line-height 1.4
  font-family lora-regular-webfont
  background-color azul
  font-weight normal

hr
  display block
  height 1px
  border 0
  border-top 1px solid gris_dark
  margin 1em 0
  padding 0

audio,
canvas,
iframe,
img,
svg,
video
  vertical-align middle

fieldset
  border 0
  margin 0
  padding 0

p
  font-size 1.7em
  +above(b2)
    font-size 1.1em

textarea
  resize vertical

.bubble
  p
    font-size 1.75em
    font-family kaushanscript-regular-webfont
  &__center
    background-image url("img/bg_header.png")
    background-size cover
    background-position center center
    background-repeat no-repeat
    height 300px
    overflow hidden
    padding 2em 0 0
    figure
      center-block(265px)
    +above(b2)
      background-image none
      height 250px
      absolute left 150px top 380px
      figure
        width 130px

  +above(b2)
    position relative
    height 650px
    &__left
      background-color azul
      position relative
      width 80%
      height 60%
      padding 7px
      border-radius 50%
      overflow hidden
      margin-left 1.7em
      margin-bottom 2em
      &::after
        content ''
        position absolute
        border-style solid
        border-width 24px 15px 0
        border-color red transparent
        display block
        width 0
        z-index 1
        margin-left -15px
        bottom -24px
        left 25px
      h2
        padding 1em 2.5em 0
        font-size: 2.5em
      p
        font-size: 1.5em
        padding 0 2em 1em
    &__right
      absolute top 420px right 140px



.browserupgrade
  margin 0.2em 0
  background primary_color--dark
  color rojo
  padding 0.2em 0

.contact

  &__image
    height 267px
    overflow hidden
    figure
      center-block(260px)
  +above(b2)
    center-block(768px)
    &__form
      position relative
      height 900px
    &__image
      absolute top left 15%
      height 440px
    &__information
