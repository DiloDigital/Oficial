.nav
  &__main
    position relative
    &-toggle
      background-color gris_light
      border 0
      color gris_dark
      cursor pointer
      font-size 1em
      height 40px
      padding 10px
      position absolute
      right 0
      top -50px
      width 50px

      &--bar
        background gris_dark
        display block
        height 2px
        transition 0.15s cubic-bezier(0.75, -0.55, 0.25, 1.55)
        width 98%
        & + .nav__main-toggle--bar
            margin-top 7px
      &--active
          top -63px
          width 40px
          height 30px
          right 15px
          .nav__main-toggle--bar
              margin 0
              position absolute
              &:nth-child(1)
                  transform: rotate(45deg);
              &:nth-child(2)
                  opacity 0
              &:nth-child(3)
                  transform: rotate(-45deg);
    &-list
      background amarillo
      display none
      list-style none
      margin 0 0 10px
      padding 0
      position relative
      width 100%
      li
          border-bottom 1px solid azul
          border-right 0
          width 100%
          &:last-child
              border 0
          &:first-child
              a:after
                  border 6px solid transparent
                  border-bottom-color rojo
                  border-top 0
                  content ''
                  height 0
                  position absolute
                  right 1em
                  top -6px
                  width 0
          a
              color gris_dark
              display block
              font-family kaushanscript-regular-webfont
              font-size 1.3em
              padding: 8px 0;
              text-align center
              text-decoration none
              transition all .3s ease-in
              width: 100%;

              &:hover
                  background-color rojo
                  color blanco
      li.current-menu-item
        a
          background-color rojo
          border-color gris_dark
          color blanco

      &--open
          display block !important
          margin-top 1em !important
          .header__bottom--navegation
              &__child
                  display block
+above(b2)
  .nav
    &__main
      float right
      width calc(100%-150px)
      margin-top 1em
      &-toggle
        display none
      &-list
        background transparent
        display block
        li
          border 0
          display-inline-block()
          width auto
          overflow hidden
          &:first-child
              a:after
                  display none
          a
            color color-text-icon
            font-size 1.2em
            border-bottom 1px solid color-text-icon
            margin 0.5em 0.2em
            display block
            box-sizing border-box
            width 100px
            &:hover
              border-bottom 1px solid accent_color




